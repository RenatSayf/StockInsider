<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    tools:background="@color/colorTransparent"
    >

    <TextView
        android:id="@+id/blockTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/text_general"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textColor="@color/colorSectionHeader"
        />

    <AutoCompleteTextView
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textAutoComplete|textMultiLine"
        tools:ignore="TouchTargetSizeCheck"
        style="@style/appEditTextStyle"
        android:labelFor="@+id/tickerLayout"
        android:hint="@string/text_all_tickers"
        android:completionThreshold="1"
        app:layout_constraintTop_toBottomOf="@+id/blockTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingEnd="36dp"
        android:maxLines="10"
        />

    <ImageView
        android:id="@+id/clearTextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/ic_clear_grey"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="@+id/contentTextView"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView"
        app:layout_constraintBottom_toBottomOf="@+id/contentTextView"
        />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/contentTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        style="@style/AppRectangularDarkButton"
        android:text="@string/text_show"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"/>

</androidx.constraintlayout.widget.ConstraintLayout>